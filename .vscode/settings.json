{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.lintTask.enable": true,
  "i18n-ally.localesPaths": ["apps/site/locales"],
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": ["source.fixAll"]
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": ["source.fixAll"]
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": ["source.fixAll", "source.sortImports"]
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": ["source.fixAll", "source.sortImports"]
  }
}
